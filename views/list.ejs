<%- include("header") -%>

   <div id="heading" class="box">
    <h1><%= listTitle %>!</h1>
   </div>
        
   <div class="box">
       
        <% for( let i = 0; i < newListItems.length; i++ ) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= newListItems[i]._id %>" onchange="this.form.submit()">
                    <p><%= newListItems[i].name %></p>
                </div>
            </form>
        <% } %> 
       
       <form action="/home" method="post" class="item">
        <input type="text" name="newitem" placeholder="New Input">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
       </form>
       <form action="/logout" method="post">
        <button class="button" type="submit"><span>Log out </span></button>
       </form>
   </div>


   <%- include("footer") -%>
   
